Ui--InputWidget
{
	background: #ebebeb;
	padding: 0;
	margin: 0;
	border-top-color: #dadada;
	border-top-width: 1dip;
	border-top-style: solid;
}


Ui--TextEditEx
{
	background: #fafafa;
	border-radius: 8dip;
	border-color: #d7d7d7;
	border-width: 1dip;
	border-style: solid;
	margin-top: 8dip;
	margin-bottom: 8dip;
	margin-left: 16dip;
	margin-right: 16dip;
		
	padding-left: 15dip;
	padding-left: 15dip;
	padding-top: 12dip;
	padding-bottom: 10dip;

}

Ui--TextEditEx:focus
{
	border-color: #579e1c;
