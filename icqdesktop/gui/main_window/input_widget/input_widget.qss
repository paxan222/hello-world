QPushButton#send_button
{
	border: none;
	width: 40dip;
	height: 40dip;
	border-image: url(:/resources/input_widget/contr_send_100.png);
	margin-left: 0;
	margin-top: 0;
	margin-right: 24dip;
	margin-bottom: 0;
	padding: 0dip;
}

QPushButton#send_button:hover
{
	border-image: url(:/resources/input_widget/contr_send_100_hover.png);
}

QPushButton#send_button:hover:pressed
{
	border-image: url(:/resources/input_widget/contr_send_100_active.png);
}

QPushButton#send_button:disabled
{
	border-image: url(:/resources/input_widget/contr_send_100_disable.png);
}

