<Window x:Class="LocalizationTestApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xml:lang="en-US"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Menu DockPanel.Dock="Top" Background="{x:Null}">
            <MenuItem x:Name="menuLanguage" Header="{DynamicResource m_menu_Language}" />
        </Menu>
        <Button x:Uid="Button"  Content="{DynamicResource m_Button}" HorizontalAlignment="Left" Margin="41,27,0,0" VerticalAlignment="Top" Width="75"/>
        <CheckBox x:Uid="CheckBox" Content="{DynamicResource m_lblHelloWorld}" HorizontalAlignment="Left" Margin="41,54,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Uid="Combobox" HorizontalAlignment="Left" Margin="41,75,0,0" VerticalAlignment="Top" Width="120"/>
        <Slider Value="{DynamicResource m_Number}" IsEnabled="False" Maximum="50" Minimum="0" Margin="0,119,0,-119" />
    </Grid>
</Window>
